  },
  "dependencies": {
    "@job-seekr/config": "workspace:*",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "pg": "^8.13.3",
    "zod": "^3.24.2"
  }
